<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatRoomActivity">

    <ListView
            android:layout_width="395dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/sendButton"
            android:id="@+id/chatListView"/>
    <Button
            android:text="@string/sendBtnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatListView"
            android:onClick="onSend"/>
    <EditText
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Type here..."
            android:ems="10"
            android:id="@+id/messageText"
            app:layout_constraintStart_toEndOf="@+id/sendButton"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toStartOf="@+id/receiveButton"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chatListView"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <Button
            android:text="@string/receiveBtnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receiveButton" app:layout_constraintStart_toEndOf="@+id/messageText"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/chatListView"
            android:onClick="onReceive"/>
</android.support.constraint.ConstraintLayout>